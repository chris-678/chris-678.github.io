  <style>
  @media screen and (min-width: 768px) {
    .social-icon {
      position: static;
      top: 150%;
      left: 50%;
      transform: translate(-50%, -50%);
      margin: 0;
      padding: 0;
      display: flex;
      z-index: 5;
    }
  }

    .social-icon {
      position: absolute;
      top: 80%;
      left: 50%;
      transform: translate(-50%, -50%);
      margin: 0;
      padding: 0;
      display: flex;
      z-index: 5;
    }

    .social-icon li {
      list-style: none;
      margin: 0 40px;

    }

    .social-icon li .fa {
      font-size: 40px;
      color: #262626;
      line-height: 80px;
      transition: .5s;

    }

    .social-icon li a {
      position: relative;
      display: block;
      width: 80px;
      height: 80px;
      background-color: #fff;
      text-align: center;
      transform: perspective(100px) rotate(-30deg) skew(25deg) translate(0, 0);
      transition: .5s;
      box-shadow: -20px 20px 10px rgb(0, 0, 0, 0.5);
    }

    .social-icon li a::before {
      content: "";
      position: absolute;
      top: 10px;
      left: -20px;
      height: 100%;
      width: 20px;
      background: #b1b1b1;
      transition: .5s;
      transform: rotate(0deg) skewY(-45deg);
    }

    .social-icon li a::after {
      content: "";
      position: absolute;
      top: 80px;
      left: -11px;
      height: 20px;
      width: 100%;
      background: #b1b1b1;
      transition: .5s;
      transform: rotate(0deg) skewX(-45deg);
    }

    .social-icon li a:hover {
      transform: perspective(1000px) rotate(-30deg) skew(25deg) translate(20px, -20px);
      box-shadow: -50px 50px 50px rgb(0, 0, 0, 0.5);
    }

    .social-icon li:hover .fa {
      color: #fff;
    }

    .social-icon li:hover .fa-github {
      color: black;
    }

    .social-icon li a:hover {
      transform: perspective(1000px) rotate(-30deg) skew(25deg) translate(20px, -20px);
      box-shadow: -50px 50px 50px rgb(0, 0, 0, 0.5);
    }

    .social-icon li:hover:nth-child(1) a {
      background: #3b5999;
    }

    .social-icon li:hover:nth-child(1) a:before {
      background: #2e4a86;
    }

    .social-icon li:hover:nth-child(1) a:after {
      background: #4a69ad;
    }

    .social-icon li:hover:nth-child(2) a {
      background: #55acee;
    }

    .social-icon li:hover:nth-child(2) a:before {
      background: #4184b7;
    }

    .social-icon li:hover:nth-child(2) a:after {
      background: #4d9fde;
    }

    .social-icon li:hover:nth-child(3) a {
      background: #dd4b39;
    }

    .social-icon li:hover:nth-child(3) a:before {
      background: #c13929;
    }

    .social-icon li:hover:nth-child(3) a:after {
      background: #e83322;
    }

    .social-icon li:hover:nth-child(4) a {
      background: #0077B5;
    }

    .social-icon li:hover:nth-child(4) a:before {
      background: #036aa0;
    }

    .social-icon li:hover:nth-child(4) a:after {
      background: #0d82bf;
    }

